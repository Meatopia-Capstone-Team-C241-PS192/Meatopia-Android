<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyGroceryStore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyGroceryStore.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorAccent">@color/black_50</item>
    </style>

    <style name="CustomInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/bg_custom_input</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black_50</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/mulish</item>
    </style>

    <style name="title_above">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:layout_marginStart">95dp</item>
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomTextInDetailProfile">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="title_input">
        <item name="android:fontFamily">@font/mulish_medium</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:layout_marginStart">38dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.MyGroceryStore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyGroceryStore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>