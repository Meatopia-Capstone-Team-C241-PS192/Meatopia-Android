<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.mycart.MyCartActivity">

    <com.example.mygrocerystore.ui.itemUi.ButtonBack
        android:id="@+id/button_back_inMyCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:text="@string/my_cart"
        style="@style/title_above"
        app:layout_constraintStart_toEndOf="@+id/button_back_inMyCart"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/empty_cart_inMyCart"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginTop="59dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/button_back_inMyCart" />

    <com.example.mygrocerystore.ui.itemUi.CircleCheckbox
        android:id="@+id/myp_checkbox"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="11dp"
        android:background="@drawable/circle_checkbox"
        android:button="@null"
        android:padding="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/empty_cart_inMyCart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/empty_cart_inMyCart" />

    <ImageView
        android:id="@+id/myp_photo_meat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/myp_checkbox"
        app:layout_constraintTop_toTopOf="@+id/empty_cart_inMyCart"
        tools:src="@drawable/meatitsrawstate" />

    <TextView
        android:id="@+id/myp_price_kg"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.5dp"
        android:layout_marginTop="6dp"
        android:text="@string/_1kg_price"
        android:textColor="@color/grey_200"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/myp_photo_meat"
        app:layout_constraintTop_toBottomOf="@+id/myp_name" />

    <com.example.mygrocerystore.ui.itemUi.ButtonCircleAdd
        android:id="@+id/myp_button_add"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="22dp"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/empty_cart_inMyCart"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/myp_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/mulish_medium"
        android:text="1"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/empty_cart_inMyCart"
        app:layout_constraintEnd_toStartOf="@+id/myp_button_add" />

    <com.example.mygrocerystore.ui.itemUi.ButtonCircleLess
        android:id="@+id/myp_button_less"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/empty_cart_inMyCart"
        app:layout_constraintEnd_toStartOf="@+id/myp_number" />

    <TextView
        android:id="@+id/myp_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/rp180_000"
        android:fontFamily="@font/mulish_bold"
        android:textSize="17.19sp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="21.5dp"
        android:textColor="@color/purple_300"
        app:layout_constraintStart_toEndOf="@+id/myp_photo_meat"
        app:layout_constraintTop_toBottomOf="@+id/myp_price_kg" />

    <TextView
        android:id="@+id/myp_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21.5dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/mulish_bold"
        android:text="@string/meat"
        android:textColor="@color/grey_100"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/myp_photo_meat"
        app:layout_constraintTop_toTopOf="@+id/empty_cart_inMyCart" />

    <com.example.mygrocerystore.ui.itemUi.ButtonCustom
        android:id="@+id/button_checkout_inMyCart"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="@string/checkout"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="39dp"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintTop_toBottomOf="@+id/empty_cart_inMyCart" />

</androidx.constraintlayout.widget.ConstraintLayout>