<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_meat_cart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/myp_photo_meat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/myp_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/meatitsrawstate" />

        <TextView
            android:id="@+id/myp_kg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21.5dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/meat"
            android:textColor="@color/grey_100"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/myp_photo_meat"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/myp_price_kg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.5dp"
            android:layout_marginTop="6dp"
            android:text="@string/_1kg_price"
            android:textColor="@color/grey_200"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/myp_photo_meat"
            app:layout_constraintTop_toBottomOf="@+id/myp_kg" />

        <TextView
            android:id="@+id/myp_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21.5dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/rp180_000"
            android:textColor="@color/purple_300"
            android:textSize="17.19sp"
            app:layout_constraintStart_toEndOf="@+id/myp_photo_meat"
            app:layout_constraintTop_toBottomOf="@+id/myp_price_kg" />

        <com.example.mygrocerystore.ui.itemUi.ButtonCircleLess
            android:id="@+id/myp_button_less"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/myp_number" />

        <TextView
            android:id="@+id/myp_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/mulish_medium"
            android:text="1"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/myp_button_add" />


        <com.example.mygrocerystore.ui.itemUi.ButtonCircleAdd
            android:id="@+id/myp_button_add"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="23.83dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.example.mygrocerystore.ui.itemUi.CircleCheckbox
            android:id="@+id/myp_checkbox"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="11dp"
            android:background="@drawable/circle_checkbox"
            android:button="@null"
            android:padding="16dp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>