<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.paymentmeat.PaymentActivity">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.mygrocerystore.ui.itemUi.ButtonBack
            android:id="@+id/button_back_inPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39.3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            style="@style/title_above"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment"
            app:layout_constraintStart_toEndOf="@+id/button_back_inPayment"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/text_amount_to_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amout_to_pay"
            android:fontFamily="@font/mulish_bold"
            android:textColor="@color/black_100"
            android:textSize="20sp"
            android:layout_marginTop="23dp"
            android:layout_marginStart="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_back_inPayment" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="55dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/rp180_000"
            android:textColor="@color/purple_300"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_amount_to_pay" />

        <ImageView
            android:id="@+id/image_meat_inPayment"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="26dp"
            android:src="@drawable/meatitsrawstate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/title_name_meat_inPayment"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="41dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/frozen_meat"
            android:textColor="@color/black_100"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/image_meat_inPayment"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/weight_meat_inPayment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/mulish_medium"
            android:text="@string/_1kg"
            android:textColor="@color/grey_200"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/image_meat_inPayment"
            app:layout_constraintTop_toBottomOf="@+id/title_name_meat_inPayment" />

        <TextView
            android:id="@+id/price_meat_inPayment"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginTop="59dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="7dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/rp180_000"
            android:textColor="@color/purple_300"
            android:textSize="17.19sp"
            app:layout_constraintStart_toEndOf="@+id/title_name_meat_inPayment"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="21dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/line_indetailprofile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_meat_inPayment" />

        

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>