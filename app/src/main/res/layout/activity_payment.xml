<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.paymentmeat.PaymentActivity">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.mygrocerystore.ui.itemUi.ButtonBack
            android:id="@+id/button_back_inPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39.3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            style="@style/title_above"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment"
            app:layout_constraintStart_toEndOf="@+id/button_back_inPayment"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/text_amount_to_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amout_to_pay"
            android:fontFamily="@font/mulish_bold"
            android:textColor="@color/black_100"
            android:textSize="20sp"
            android:layout_marginTop="23dp"
            android:layout_marginStart="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_back_inPayment" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="55dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/rp180_000"
            android:textColor="@color/purple_300"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_amount_to_pay" />

        <ImageView
            android:id="@+id/image_meat_inPayment"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="26dp"
            android:src="@drawable/meatitsrawstate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/title_name_meat_inPayment"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="41dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/frozen_meat"
            android:textColor="@color/black_100"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/image_meat_inPayment"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/weight_meat_inPayment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/mulish_medium"
            android:text="@string/_1kg"
            android:textColor="@color/grey_200"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/image_meat_inPayment"
            app:layout_constraintTop_toBottomOf="@+id/title_name_meat_inPayment" />

        <TextView
            android:id="@+id/price_meat_inPayment"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginTop="59dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="7dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/rp180_000"
            android:textColor="@color/purple_300"
            android:textSize="17.19sp"
            app:layout_constraintStart_toEndOf="@+id/title_name_meat_inPayment"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="21dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/line_indetailprofile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_meat_inPayment" />

        <TextView
            android:id="@+id/text_shipping_address"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/shipping_address"
            android:textColor="@color/black_100"
            android:clickable="false"
            android:enabled="false"
            android:alpha="0.3"
            android:layout_marginStart="30dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_shipping_address"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/button_default_inPayment"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:checked="true"
                android:layout_marginStart="39dp"
                android:buttonTint="@color/purple_400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_shipping_address" />

            <TextView
                android:id="@+id/text_default_inPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="15sp"
                android:alpha="0.3"
                android:textColor="@color/black_50"
                android:fontFamily="@font/mulish_light"
                android:text="@string/deafult_"
                app:layout_constraintStart_toEndOf="@+id/button_default_inPayment"
                app:layout_constraintTop_toBottomOf="@+id/text_shipping_address" />

            <RadioButton
                android:id="@+id/button_another_address_inPayment"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:alpha="0.3"
                android:buttonTint="@color/purple_400"
                app:layout_constraintStart_toEndOf="@+id/text_default_inPayment"
                app:layout_constraintTop_toBottomOf="@+id/text_shipping_address" />

            <TextView
                android:id="@+id/text_another_address_inPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:alpha="0.3"
                android:fontFamily="@font/mulish_light"
                android:text="@string/another_address"
                android:textColor="@color/black_50"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/button_another_address_inPayment"
                app:layout_constraintTop_toBottomOf="@+id/text_shipping_address" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="33dp"
            android:layout_marginTop="6dp"
            android:alpha="0.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup">

            <com.example.mygrocerystore.ui.itemUi.InputData
                android:id="@+id/ep_name"
                style="@style/CustomInputStyle" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.5dp"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/mulish_medium"
            android:text="@string/total_price"
            android:textColor="@color/grey_200"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_address" />

        <TextView
            android:id="@+id/text_delivery_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/mulish_medium"
            android:text="@string/delivery_charge"
            android:textColor="@color/grey_200"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_total_price" />

        <TextView
            android:id="@+id/text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/mulish_medium"
            android:text="@string/total"
            android:textColor="@color/grey_200"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_delivery_charge" />

        <TextView
            android:id="@+id/nilai_total_price_inPayment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.5dp"
            android:fontFamily="@font/mulish_bold"
            android:layout_marginEnd="34dp"
            android:text="@string/rp180_000"
            android:textAlignment="textEnd"
            android:textColor="@color/purple_300"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_address" />

        <TextView
            android:id="@+id/nilai_delivery_charge_inPayment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_bold"
            android:layout_marginEnd="34dp"
            android:layout_marginTop="22dp"
            android:text="@string/rp180_000"
            android:textAlignment="textEnd"
            android:textColor="@color/purple_300"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nilai_total_price_inPayment" />

        <TextView
            android:id="@+id/nilai_total_inPayment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_bold"
            android:layout_marginEnd="34dp"
            android:textAlignment="textEnd"
            android:layout_marginTop="22dp"
            android:text="@string/rp180_000"
            android:textColor="@color/purple_300"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nilai_delivery_charge_inPayment" />

        <TextView
            android:id="@+id/text_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_medium"
            android:layout_marginTop="15dp"
            android:layout_marginStart="17dp"
            android:text="@string/payment_method"
            android:textColor="@color/black_50"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/nilai_total_inPayment" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_payment_method" />

        <TextView
            android:id="@+id/text_master_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_bold"
            android:layout_marginStart="22dp"
            android:layout_marginTop="35dp"
            android:text="@string/payment_method"
            android:textColor="@color/grey_100"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/icon_master_card"
            app:layout_constraintTop_toBottomOf="@+id/text_payment_method" />

        <TextView
            android:id="@+id/no_master_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_bold"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:text="@string/_0000_0000_0000_0000"
            android:textColor="@color/grey_200"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/icon_master_card"
            app:layout_constraintTop_toBottomOf="@+id/text_master_card" />

        <ImageView
            android:id="@+id/icon_master_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="51dp"
            android:background="@drawable/icon_master_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_payment_method"/>

        <com.example.mygrocerystore.ui.itemUi.ButtonCustom
            android:id="@+id/button_pay_now_inPayment"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="41dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/pay_now"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            tools:layout_editor_absoluteX="39dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>