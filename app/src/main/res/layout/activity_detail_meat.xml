<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailmeat.DetailMeatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_meat"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/ellipse_7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.mygrocerystore.ui.itemUi.ButtonBack
            android:id="@+id/button_back_inDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_back_inDetail" />

        <TextView
            android:id="@+id/name_meat"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="38dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/meat_name"
            android:textColor="@color/black_100"
            android:textSize="32sp"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <com.example.mygrocerystore.ui.itemUi.ButtonCircleLess
            android:id="@+id/buttonCircleLess"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/price_meat_inDetail" />

        <TextView
            android:id="@+id/kg_number"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/mulish_medium"
            android:textSize="13sp"
            android:textColor="@color/black_50"
            android:text="10000 Kg"
            app:layout_constraintEnd_toStartOf="@+id/buttonCircleAdd"
            app:layout_constraintStart_toEndOf="@+id/buttonCircleLess"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <com.example.mygrocerystore.ui.itemUi.ButtonCircleAdd
            android:id="@+id/buttonCircleAdd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="19dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black_50"
            android:text="@string/meat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_meat" />

        <TextView
            android:id="@+id/price_meat_inDetail"
            android:layout_width="170dp"
            android:layout_height="18dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/rp180_000"
            android:textColor="@color/purple_300"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="38dp"
            android:fontFamily="@font/mulish_bold"
            android:text="@string/descriptions"
            android:textColor="@color/grey_100"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_meat_inDetail" />

        <TextView
            android:id="@+id/descriptions_inDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="22dp"
            android:textColor="@color/black_50"
            android:text="The round cut covers the entire back thigh, including the top side, rump, silverside and knuckle."
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <com.example.mygrocerystore.ui.itemUi.ButtonAddToCart
            android:id="@+id/button_add_to_cart_inDetail"
            android:layout_width="162dp"
            android:layout_height="34dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="29dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptions_inDetail" />

        <com.example.mygrocerystore.ui.itemUi.ButtonBuy
            android:id="@+id/button_buy_inDetail"
            android:layout_width="127dp"
            android:layout_height="34dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="29dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/buy_now"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptions_inDetail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>