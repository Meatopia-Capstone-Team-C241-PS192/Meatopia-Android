<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_meat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/myc_photo_meat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="13.5dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/meatitsrawstate" />

        <TextView
            android:id="@+id/myc_name_meat"
            android:layout_width="240dp"
            android:layout_height="27dp"
            android:text="@string/meat"
            android:textColor="@color/grey_100"
            android:textSize="20sp"
            android:layout_marginStart="21.5dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/mulish_bold"
            app:layout_constraintStart_toEndOf="@id/myc_photo_meat"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Meat" />

        <TextView
            android:id="@+id/myc_price_kg"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginStart="20.5dp"
            android:layout_marginTop="6dp"
            android:text="@string/_1kg_price"
            android:textColor="@color/grey_200"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/myc_photo_meat"
            app:layout_constraintTop_toBottomOf="@id/myc_name_meat"
            tools:text="1 kg" />

        <TextView
            android:id="@+id/myc_price"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:text="@string/rp180_000"
            android:fontFamily="@font/mulish_bold"
            android:textSize="17.19sp"
            android:layout_marginStart="21.5dp"
            android:textColor="@color/purple_300"
            app:layout_constraintStart_toEndOf="@id/myc_photo_meat"
            app:layout_constraintTop_toBottomOf="@id/myc_price_kg"
            tools:text="Rp 180.000" />

        <com.example.mygrocerystore.ui.itemUi.ButtonCircleCart
            android:id="@+id/myc_button_cart"
            android:layout_width="32.1dp"
            android:layout_height="32.93dp"
            android:layout_marginEnd="23.83dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
